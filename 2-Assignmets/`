#include <stdio.h>


void main()
{
    int row,col,n,x;

    printf("enter the number");

    scanf("%d", &n);


    for (row=1; row<=n; row++)
    {
	for (col=1; col<=n; col++)
	{
            x=row+col;
	    if (row==col || x==n+1)
	    {
		if (row==col && x==n+1)
		{
		printf("hellohello");
		}
		else
		    printf("hello ");
	    }
	    else
	    {
		printf(" ");
	    }
	}
	printf("\n");
    }
}
